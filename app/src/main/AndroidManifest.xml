<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zingbyte.batmanfoodorder">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:configChanges="orientation|screenSize"
            android:name=".activity.SplashActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:configChanges="orientation|screenSize"
            android:name=".activity.MainActivity"
            android:label=""
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:name=".activity.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:name=".activity.SignupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:name=".activity.SignInActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:name=".activity.CardEditActivity"
            android:label="Card Detail Edit"
            android:parentActivityName=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:name=".activity.CardDetailActivity"
            android:label="Card Detail"
            android:parentActivityName=".activity.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:name=".activity.OrderHistory"
            android:label="Order History"
            android:parentActivityName=".activity.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:name=".activity.SingleProductDetail"
            android:label="Single Food Detail"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:name=".activity.AddressDetail"
            android:label="Add Address Detail"
            android:parentActivityName=".activity.MainActivity" />
        <activity
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:name=".activity.ProfileDetail"
            android:label="Profile Detail"
            android:parentActivityName=".activity.MainActivity" />
        <activity android:name=".activity.About"
            android:label="About Us"
            android:launchMode="singleTask"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".activity.MainActivity"/>
    </application>

</manifest>