<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zingbyte.batmanfoodorder"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.SplashActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label=""
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.WelcomeActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.SignupActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.SignInActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.CardEditActivity"
            android:configChanges="orientation|screenSize"
            android:label="Card Detail Edit"
            android:launchMode="singleTask"
            android:parentActivityName="com.zingbyte.batmanfoodorder.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.CardDetailActivity"
            android:configChanges="orientation|screenSize"
            android:label="Card Detail"
            android:launchMode="singleTask"
            android:parentActivityName="com.zingbyte.batmanfoodorder.activity.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.OrderHistory"
            android:configChanges="orientation|screenSize"
            android:label="Order History"
            android:launchMode="singleTask"
            android:parentActivityName="com.zingbyte.batmanfoodorder.activity.MainActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.SingleProductDetail"
            android:configChanges="orientation|screenSize"
            android:label="Single Food Detail"
            android:launchMode="singleTask"
            android:parentActivityName="com.zingbyte.batmanfoodorder.activity.MainActivity" />
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.AddressDetail"
            android:configChanges="orientation|screenSize"
            android:label="Add Address Detail"
            android:launchMode="singleTask"
            android:parentActivityName="com.zingbyte.batmanfoodorder.activity.MainActivity" />
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.ProfileDetail"
            android:configChanges="orientation|screenSize"
            android:label="Profile Detail"
            android:launchMode="singleTask"
            android:parentActivityName="com.zingbyte.batmanfoodorder.activity.MainActivity" />
        <activity
            android:name="com.zingbyte.batmanfoodorder.activity.About"
            android:configChanges="orientation|screenSize"
            android:label="About Us"
            android:launchMode="singleTask"
            android:parentActivityName="com.zingbyte.batmanfoodorder.activity.MainActivity" />

        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>